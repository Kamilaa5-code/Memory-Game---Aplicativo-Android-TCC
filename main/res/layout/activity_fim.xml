<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fim">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/parabens"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="60%" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/preto"
        android:layout_below="@+id/logo"/>
    <TextView
        android:id="@+id/tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/preto"
        android:layout_below="@+id/nome"/>
    <TextView
        android:id="@+id/cronometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/preto"
        android:layout_below="@+id/tempo"/>

    <Button
        android:textColor="@color/branco"
        android:layout_width="200dp"
        android:textIsSelectable="false"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_height="60dp"
        android:text="@string/jogar"
        android:id="@+id/jogar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/placa"
        android:textSize="20dp"
        android:layout_below="@+id/logo"
        android:onClick="onClick"/>

    <Button
        android:textColor="@color/branco"
        android:layout_width="200dp"
        android:textIsSelectable="false"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_height="60dp"
        android:text="@string/recorde"
        android:id="@+id/recordes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/placa"
        android:textSize="20dp"
        android:layout_below="@+id/jogar"
        android:onClick="onClick"/>

</android.support.percent.PercentRelativeLayout>